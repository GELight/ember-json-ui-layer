{{#if transition}}

  {{#link-to transition class=cssClass}}
    
    {{title}}

    {{#if children}}
      {{#each children as |component|}}
        {{component component.class data=component}}
      {{/each}}
    {{/if}}

  {{/link-to}}

{{else}}

  <button type="button" class="{{cssClass}}" {{action 'click'}}>
      
    {{title}}

    {{#if children}}
      {{#each children as |component|}}
        {{component component.class data=component}}
      {{/each}}
    {{/if}}

  </button>

{{/if}}